# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build root`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t root`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system root && \
          adduser --system -G root root

COPY dist/apps/root root/
RUN chown -R root:root .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix root --omit=dev -f install

CMD [ "node", "root" ]
